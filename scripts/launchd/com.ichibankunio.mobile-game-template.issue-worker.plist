<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.ichibankunio.mobile-game-template.issue-worker</string>

    <key>ProgramArguments</key>
    <array>
      <string>/bin/zsh</string>
      <string>-lc</string>
      <string>cd __REPO_PATH__ &amp;&amp; LABEL=autocodex POLL_INTERVAL=60 ./scripts/issue_worker.sh</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>WorkingDirectory</key>
    <string>__REPO_PATH__</string>

    <key>StandardOutPath</key>
    <string>__REPO_PATH__/.codex-worker/launchd.out.log</string>

    <key>StandardErrorPath</key>
    <string>__REPO_PATH__/.codex-worker/launchd.err.log</string>
  </dict>
</plist>
